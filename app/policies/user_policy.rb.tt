class UserPolicy < AuthenticatedPolicy
  def admin?
    user.present? && user.admin?
  end

  def current_user?
    user.present? && user == record
  end

  def index?
    user.present?
  end

  def show?
    admin? || current_user?
  end

  def create?
    user.nil? || user.admin?
  end

  def new?
    create?
  end

  def update?
    admin? || current_user?
  end

  def edit?
    update?
  end

  def destroy?
    update?
  end

  class Scope < Scope
    def resolve
      if user.admin?
        scope.all
      else
        scope.where(id: user.id)
      end
    end
  end
end
